.col-lg-4.col-md-10
  %p= "Crear cuenta:"
  - if flash.any?
    - flash.each do |type, msg|
      - alert = type == "alert" ? 'danger' : 'success'
      %div.col-12.col-sm-10.offset-sm-1.col-md-8.offset-md-2.alert{class: "alert-#{alert}", role: "alert" }
        = msg

  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: "off" }) do |f|
    .control-group
      .form-group.floating-label-form-group.controls
        %label Email
        = f.text_field :email, class: "form-control", placeholder: "Email", data: {"validation-required-message": "Ingrese email."}
        %p.help-block.text-danger

    .control-group
      .form-group.floating-label-form-group.controls
        %label Contraseña
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password

        = f.password_field :password, class: "form-control", placeholder: "Contraseña", data: {"validation-required-message": "Ingrese contraseña."}
        %p.help-block.text-danger
    .control-group
      .form-group.floating-label-form-group.controls
        %label Confirmar contraseña
        = f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmar contraseña", data: {"validation-required-message": "Confirmar contraseña."}
        %p.help-block.text-danger
    %br/
    #success
    = f.submit "Iniciar", class: "btn btn-primary"

    = render "devise/shared/links"