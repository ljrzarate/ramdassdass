.d-flex.flex-column.align-items-center
  .col-12.col-xl-9.ms-auto.ms-xl-4.me-auto.ps-lg-5{:style=>"max-width: 800px; overflow-y: hidden"}
    %article.my-70
      = render partial: "shared/breadcrumbs"
      %h1= post.title
      %h5
        - post.tag_list.each do |tag|
          - link_with_params_for_tag = params[:show_draft].present? ? posts_path(show_draft: true, tag: tag) : posts_path(tag: tag)
          = link_to link_with_params_for_tag do
            %span.badge.badge-pill.badge-brown=tag
      = post.summary + "..."

  = image_tag(asset_url("lock.png"), class: "blankslate-top-img", style: "width: 170px;")
  .d-flex.align-items-center.flex-column
    %h4 Si quieres seguir leyendo haz una donacion de 2.00 usd or more :)
    %input#donationValue.form-control{:name => "donationValue", :type => "number", min: 2.00, value: 2.00, :style=>"width: 25%; margin-bottom: 5px;"}
  .paypal-conteiner